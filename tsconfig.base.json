{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "strict": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@flow-recruitment/common/types": ["libs/common/types/src/index.ts"],
      "@flow-recruitment/forms/constants": ["libs/forms/constants/src/index.ts"],
      "@flow-recruitment/forms/dtos": ["libs/forms/dtos/src/index.ts"],
      "@flow-recruitment/forms/types": ["libs/forms/types/src/index.ts"],
      "@flow-recruitment/prisma": ["libs/prisma/src/index.ts"],
      "@flow-recruitment/product-categories/dtos": ["libs/product-categories/dtos/src/index.ts"],
      "@flow-recruitment/users/dtos": ["libs/users/dtos/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
